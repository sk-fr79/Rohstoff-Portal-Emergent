	public RECORD_#TABLEBASE#(long lID_Unformated) throws myException
	{
		super("#TABLENAME#","ID_#TABLEBASE#",""+lID_Unformated);
		this.set_TABLE_NAME("#TABLENAME#");

		//2013-09-20: jedem MetaFieldDef-Objekt den richtigen tabellenname uebergeben
		this.set_Tablename_To_FieldMetaDefs(RECORD_#TABLEBASE#.TABLENAME);
	}

	public RECORD_#TABLEBASE#(String c_ID_or_WHEREBLOCK_OR_SQL)   throws myException 
	{
		super();
		this.set_TABLE_NAME("#TABLENAME#");

		if (bibALL.isLong(c_ID_or_WHEREBLOCK_OR_SQL))
		{
			this.PrepareAndBuild("*", bibE2.cTO()+".#TABLENAME#", "ID_#TABLEBASE#="+c_ID_or_WHEREBLOCK_OR_SQL);
		}
		else
		{
			if (c_ID_or_WHEREBLOCK_OR_SQL.toUpperCase().trim().startsWith("SELECT "))
			{
				this.BuildRecord(c_ID_or_WHEREBLOCK_OR_SQL);
			}
			else
			{
				this.PrepareAndBuild("*", bibE2.cTO()+".#TABLENAME#", c_ID_or_WHEREBLOCK_OR_SQL);
			}
		}
		
		
		//2013-09-20: jedem MetaFieldDef-Objekt den richtigen tabellenname uebergeben
		this.set_Tablename_To_FieldMetaDefs(RECORD_#TABLEBASE#.TABLENAME);
	}
	
	

	public RECORD_#TABLEBASE#(long lID_Unformated, MyConnection Conn) throws myException
	{
		super("#TABLENAME#","ID_#TABLEBASE#",""+lID_Unformated, Conn);

		this.set_TABLE_NAME("#TABLENAME#");


		//2013-09-20: jedem MetaFieldDef-Objekt den richtigen tabellenname uebergeben
		this.set_Tablename_To_FieldMetaDefs(RECORD_#TABLEBASE#.TABLENAME);

	}


